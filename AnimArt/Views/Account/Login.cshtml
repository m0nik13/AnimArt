@model LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <img src="~/assets/logo1.png" alt="AnimArt" class="auth-logo">
            <h2 class="auth-title">Вхід до AnimArt</h2>
        </div>

        <form asp-action="Login" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="Username" class="form-label">Ім'я користувача</label>
                <input asp-for="Username" type="text" class="form-input" placeholder="Введіть ваше ім'я" />
                <span asp-validation-for="Username" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-input" placeholder="Введіть ваш пароль" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewData["ErrorMessage"]
                </div>
            }

            <button type="submit" class="auth-button">
                <i class="fas fa-sign-in-alt"></i>
                Увійти
            </button>

            <div class="auth-links">
                <span>Ще не маєте акаунту?</span>
                <a asp-action="Register" class="auth-link">Зареєструватися</a>
            </div>
        </form>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 140px);
        padding: 40px 20px;
        background: linear-gradient(135deg, #121212 0%, #1a1a1a 100%);
    }

    .auth-card {
        background: #252525;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid #333;
        width: 100%;
        max-width: 400px;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .auth-logo {
        height: 50px;
        margin-bottom: 15px;
    }

    .auth-title {
        color: #bb86fc;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        color: #e0e0e0;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .form-input {
        width: 100%;
        padding: 12px 15px;
        background: #1e1e1e;
        border: 1px solid #333;
        border-radius: 6px;
        color: #e0e0e0;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            outline: none;
            border-color: #bb86fc;
            box-shadow: 0 0 0 2px rgba(187, 134, 252, 0.2);
        }

        .form-input::placeholder {
            color: #888;
        }

    .validation-error {
        color: #cf6679;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .error-message {
        background: rgba(207, 102, 121, 0.1);
        border: 1px solid #cf6679;
        color: #cf6679;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .auth-button {
        width: 100%;
        background: #bb86fc;
        color: white;
        border: none;
        padding: 14px;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-bottom: 20px;
    }

        .auth-button:hover {
            background: #9b6bd4;
            transform: translateY(-1px);
        }

        .auth-button:active {
            transform: translateY(0);
        }

    .auth-links {
        text-align: center;
        color: #a0a0a0;
        font-size: 0.9rem;
    }

    .auth-link {
        color: #bb86fc;
        text-decoration: none;
        font-weight: 500;
        margin-left: 5px;
        transition: color 0.3s ease;
    }

        .auth-link:hover {
            color: #9b6bd4;
            text-decoration: underline;
        }

    @@media (max-width: 480px) {
        .auth-container {
            padding: 20px 15px;
        }

        .auth-card {
            padding: 30px 25px;
        }

        .auth-title {
            font-size: 1.3rem;
        }
    }
</style>