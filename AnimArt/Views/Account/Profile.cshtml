@model ProfileViewModel
@{
    ViewData["Title"] = "Профіль";
}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            <i class="fas fa-user-circle"></i>
        </div>
        <h1 class="profile-username">@Model.Username</h1>
        <div class="profile-badge">@Model.Role</div>
    </div>

    <div class="profile-content">
        <div class="profile-section">
            <h3 class="section-title">
                <i class="fas fa-info-circle"></i>
                Основна інформація
            </h3>
            <div class="info-grid">
                <div class="info-item">
                    <label>Роль:</label>
                    <span class="role-badge">@Model.Role</span>
                </div>
                <div class="info-item">
                    <label>Дата реєстрації:</label>
                    <span>@Model.RegistrationDate.ToString("dd.MM.yyyy")</span>
                </div>
                <div class="info-item">
                    <label>Останній вхід:</label>
                    <span>@Model.LastLogin.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
            </div>
        </div>

        <div class="profile-section">
            <h3 class="section-title">
                <i class="fas fa-chart-bar"></i>
                Статистика
            </h3>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value">@Model.WatchedAnime</div>
                    <div class="stat-label">Переглянуто аніме</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@Model.FavoritesCount</div>
                    <div class="stat-label">В обраному</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@Model.ReviewsCount</div>
                    <div class="stat-label">Відгуків</div>
                </div>
            </div>
        </div>

        <div class="profile-actions">
            <a asp-controller="Home" asp-action="Index" class="action-button primary">
                <i class="fas fa-home"></i>
                На головну
            </a>
            <a asp-action="Logout" class="action-button secondary">
                <i class="fas fa-sign-out-alt"></i>
                Вийти
            </a>
        </div>
    </div>
</div>

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px;
        background: #252525;
        border-radius: 12px;
        border: 1px solid #333;
    }

    .profile-avatar {
        font-size: 80px;
        color: #bb86fc;
        margin-bottom: 15px;
    }

    .profile-username {
        color: #e0e0e0;
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 10px 0;
    }

    .profile-badge {
        display: inline-block;
        background: rgba(187, 134, 252, 0.2);
        color: #bb86fc;
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        border: 1px solid rgba(187, 134, 252, 0.3);
    }

    .profile-content {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .profile-section {
        background: #252525;
        padding: 25px;
        border-radius: 12px;
        border: 1px solid #333;
    }

    .section-title {
        color: #bb86fc;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0 0 20px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #333;
    }

        .info-item label {
            color: #a0a0a0;
            font-weight: 500;
        }

        .info-item span {
            color: #e0e0e0;
            font-weight: 500;
        }

    .role-badge {
        background: rgba(3, 218, 198, 0.2);
        color: #03dac6;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }

    .stat-card {
        background: #1e1e1e;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
        border: 1px solid #333;
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-2px);
            border-color: #bb86fc;
        }

    .stat-value {
        color: #bb86fc;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #a0a0a0;
        font-size: 0.9rem;
    }

    .profile-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .action-button {
        padding: 12px 25px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

    .primary {
        background: #bb86fc;
        color: white;
    }

        .primary:hover {
            background: #9b6bd4;
            transform: translateY(-1px);
        }

    .secondary {
        background: #333;
        color: #e0e0e0;
        border: 1px solid #444;
    }

        .secondary:hover {
            background: #444;
            transform: translateY(-1px);
        }

    @@media (max-width: 768px) {
        .profile-container {
            padding: 20px 15px;
        }

        .profile-header {
            padding: 20px;
        }

        .profile-username {
            font-size: 1.5rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .stats-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .profile-actions {
            flex-direction: column;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>