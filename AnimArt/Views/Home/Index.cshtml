@model IEnumerable<Anime>
@{
    ViewData["Title"] = "Головна";
}

<div class="anime-list">
    @if (Model != null && Model.Any())
    {
        @foreach (var anime in Model)
        {
            <div class="anime-card" data-id="@anime.Id">
                <div class="anime-poster">
                    @if (!string.IsNullOrEmpty(anime.PosterUrl))
                    {
                        <img src="@anime.PosterUrl" alt="@anime.Title" onerror="this.src='/assets/placeholder.jpg'">
                    }
                    else
                    {
                        <div class="poster-placeholder">
                            <i class="fas fa-image"></i>
                            <span>Немає постера</span>
                        </div>
                    }
                </div>
                <div class="anime-info">
                    <h3 class="anime-title">@anime.Title</h3>
                    @if (!string.IsNullOrEmpty(anime.OriginalTitle) && anime.OriginalTitle != anime.Title)
                    {
                        <div class="anime-original-title">@anime.OriginalTitle</div>
                    }
                    
                    <div class="anime-meta">
                        <span class="episodes @anime.Status.ToString().ToLower()">
                            @if (anime.Status == AnimeStatus.Ongoing)
                            {
                                <text>@anime.ReleasedEpisodes з @anime.TotalEpisodes сер</text>
                            }
                            else if (anime.Status == AnimeStatus.Completed)
                            {
                                <text>@anime.TotalEpisodes серій</text>
                            }
                            else if (anime.Status == AnimeStatus.Announced)
                            {
                                <text>Анонсовано</text>
                            }
                            else
                            {
                                <text>Перерва</text>
                            }
                        </span>
                        <span class="rating">
                            <i class="fas fa-star">5/5</i>
                        </span>
                        <span class="type">
                            @anime.Type
                        </span>
                        <span class="year">@anime.ReleaseDate.Year</span>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(anime.Description))
                    {
                        <p class="anime-description">@anime.Description</p>
                    }
                    else
                    {
                        <p class="anime-description no-description">Опис відсутній</p>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-anime-message">
            <i class="fas fa-film"></i>
            <h3>Аніме ще не додано</h3>
            <p>Адміністратор ще не додав жодного аніме до каталогу.</p>
        </div>
    }
</div>