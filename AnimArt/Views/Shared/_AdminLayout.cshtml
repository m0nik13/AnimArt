<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimArt Admin</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="app-container">
        <!-- Адмінська навігація -->
        <header class="header admin-header">
            <div class="logo-container">
                <span class="app-title">AnimArt Admin</span>
            </div>

            <nav class="main-nav" aria-label="Адмін навігація">
                <a asp-controller="Admin" asp-action="Index" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Панель</span>
                </a>
                <a asp-controller="Admin" asp-action="Users" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Користувачі</span>
                </a>
                <a asp-controller="Admin" asp-action="Anime" class="nav-item">
                    <i class="fas fa-film"></i>
                    <span>Аніме</span>
                </a>
                <a asp-controller="Admin" asp-action="Genres" class="nav-item">
                    <i class="fas fa-tags"></i>
                    <span>Жанри</span>
                </a>
                <a asp-controller="Admin" asp-action="Studios" class="nav-item">
                    <i class="fas fa-building"></i>
                    <span>Студії</span>
                </a>
                <a asp-controller="Admin" asp-action="VoiceStudios" class="nav-item">
                    <i class="fas fa-microphone"></i>
                    <span>Озвучення</span>
                </a>
                <a asp-controller="Admin" asp-action="Reviews" class="nav-item">
                    <i class="fas fa-comments"></i>
                    <span>Відгуки</span>
                </a>
                <a asp-controller="Admin" asp-action="Ratings" class="nav-item">
                    <i class="fas fa-star"></i>
                    <span>Рейтинги</span>
                </a>
                <a asp-controller="Home" asp-action="Index" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Сайт</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Вийти</span>
                </a>
            </nav>
        </header>

        <!-- Основний контент -->
        <main class="content admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>