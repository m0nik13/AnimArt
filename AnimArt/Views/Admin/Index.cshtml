@model AdminStatsViewModel
@{
    ViewData["Title"] = "Адмін панель";
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">
            <i class="fas fa-cog"></i>
            Адмін панель
        </h1>
        <p class="admin-subtitle">Управління контентом та користувачами</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@Model.TotalUsers</div>
                <div class="stat-label">Користувачів</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-film"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@Model.TotalAnime</div>
                <div class="stat-label">Аніме</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@Model.TotalGenres</div>
                <div class="stat-label">Жанрів</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@Model.TotalStudios</div>
                <div class="stat-label">Студій</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-microphone"></i>
            </div>
            <div class="stat-info">
                <div class="stat-value">@Model.TotalVoiceStudios</div>
                <div class="stat-label">Студій озвучення</div>
            </div>
        </div>
    </div>

    <div class="admin-sections">
        <div class="section-card">
            <h3 class="section-title">
                <i class="fas fa-users-cog"></i>
                Користувачі
            </h3>
            <p class="section-description">Керування користувачами системи</p>
            <a asp-action="Users" class="section-button">
                <i class="fas fa-arrow-right"></i>
                Перейти
            </a>
        </div>

        <div class="section-card">
            <h3 class="section-title">
                <i class="fas fa-film"></i>
                Аніме
            </h3>
            <p class="section-description">Додавання та редагування аніме</p>
            <a asp-action="Anime" class="section-button">
                <i class="fas fa-arrow-right"></i>
                Перейти
            </a>
        </div>

        <div class="section-card">
            <h3 class="section-title">
                <i class="fas fa-tags"></i>
                Жанри
            </h3>
            <p class="section-description">Керування жанрами аніме</p>
            <a asp-action="Genres" class="section-button">
                <i class="fas fa-arrow-right"></i>
                Перейти
            </a>
        </div>

        <div class="section-card">
            <h3 class="section-title">
                <i class="fas fa-building"></i>
                Студії
            </h3>
            <p class="section-description">Керування студіями виробництва</p>
            <a asp-action="Studios" class="section-button">
                <i class="fas fa-arrow-right"></i>
                Перейти
            </a>
        </div>

        <div class="section-card">
            <h3 class="section-title">
                <i class="fas fa-microphone"></i>
                Озвучення
            </h3>
            <p class="section-description">Керування студіями озвучення</p>
            <a asp-action="VoiceStudios" class="section-button">
                <i class="fas fa-arrow-right"></i>
                Перейти
            </a>
        </div>
    </div>

    <div class="recent-users">
        <h3 class="section-title">Останні користувачі</h3>
        <div class="users-list">
            @foreach (var user in Model.RecentUsers)
            {
                <div class="user-card">
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="user-info">
                        <div class="user-name">@user.Username</div>
                        <div class="user-role @user.Role.ToString().ToLower()">@user.Role</div>
                    </div>
                    <div class="user-date">@user.RegistrationDate.ToString("dd.MM.yyyy")</div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .admin-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .admin-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px;
        background: #252525;
        border-radius: 12px;
        border: 1px solid #333;
    }

    .admin-title {
        color: #bb86fc;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .admin-subtitle {
        color: #a0a0a0;
        font-size: 1.1rem;
        margin: 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: #252525;
        padding: 20px;
        border-radius: 12px;
        border: 1px solid #333;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: #bb86fc;
        }

    .stat-icon {
        font-size: 2rem;
        color: #bb86fc;
    }

    .stat-value {
        color: #e0e0e0;
        font-size: 1.8rem;
        font-weight: 700;
        line-height: 1;
    }

    .stat-label {
        color: #a0a0a0;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .admin-sections {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .section-card {
        background: #252525;
        padding: 25px;
        border-radius: 12px;
        border: 1px solid #333;
        transition: all 0.3s ease;
    }

        .section-card:hover {
            border-color: #bb86fc;
            transform: translateY(-2px);
        }

    .section-title {
        color: #bb86fc;
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-description {
        color: #a0a0a0;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    .section-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #bb86fc;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .section-button:hover {
            background: #9b6bd4;
            transform: translateX(5px);
        }

    .recent-users {
        background: #252525;
        padding: 25px;
        border-radius: 12px;
        border: 1px solid #333;
    }

    .users-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .user-card {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: #1e1e1e;
        border-radius: 8px;
        border: 1px solid #333;
    }

    .user-avatar {
        font-size: 2rem;
        color: #bb86fc;
    }

    .user-info {
        flex: 1;
    }

    .user-name {
        color: #e0e0e0;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .user-role {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
    }

        .user-role.user {
            background: rgba(3, 218, 198, 0.2);
            color: #03dac6;
        }

        .user-role.admin {
            background: rgba(187, 134, 252, 0.2);
            color: #bb86fc;
        }

    .user-date {
        color: #a0a0a0;
        font-size: 0.9rem;
    }

    @@media (max-width: 768px) {
        .admin-container {
            padding: 15px;
        }

        .admin-title {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .admin-sections {
            grid-template-columns: 1fr;
        }

        .user-card {
            flex-direction: column;
            text-align: center;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }
</style>